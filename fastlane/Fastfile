default_platform(:ios)

platform :ios do

  before_all do
    #dev_mobile
    #ENV["SLACK_URL"] = "https://hooks.slack.com/services/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"
    ENV["SLACK_URL"] = "https://hooks.slack.com/services/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"
    ENV["IOS_DEV_TEAM"] = "https://hooks.slack.com/services/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"
  end

  desc "installing current pod dependecies"
  lane :pod_install do
    cocoapods(
      clean: true,
      repo_update: true,
      use_bundle_exec: false
    )
  end



  desc "Push a new beta build to TestFlight"
  lane :beta do
